@model AgendaContactos.Models.Contacto

@{
    ViewData["Title"] = "Detalles";
}

<div class="container-fluid m-0 p-0">
<h2>Detalles</h2>
    <hr />

<div>
    
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Nombre)
        </dt>
            <dd class="col-sm-10 text-secondary">
            @Html.DisplayFor(model => model.Nombre)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Telefono)
        </dt>
            <dd class="col-sm-10 text-secondary">
            @Html.DisplayFor(model => model.Telefono)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Direccion)
        </dt>
            <dd class="col-sm-10 text-secondary">
            @Html.DisplayFor(model => model.Direccion)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Email)
        </dt>
            <dd class="col-sm-10 text-secondary">
            @Html.DisplayFor(model => model.Email)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Tipo)
        </dt>
            <dd class="col-sm-10 text-secondary">
            @Html.DisplayFor(model => model.Tipo)
        </dd>
    </dl>
</div>
<div>
        <a asp-action="Edit" asp-route-id="@Model?.IdPersona" class="btn btn-outline-warning me-2">Editar Contacto</a>
        <a asp-action="Index" class="btn btn-outline-light">Regresar</a>
</div>
</div>
